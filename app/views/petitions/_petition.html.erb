<tr>
  <td><%= link_to petition.title, petition %></td>
  <td><%= petition.signatures.count %></td>
  <td><%= petition.type %></td>
  <td><%= petition.user.display_name %></td>
  <td><%= petition.created_at %></td>
  <td>
    <%= link_to 'Edit', edit_admin_petition_path(petition) %>
    <%= link_to 'Destroy', admin_petition_path(petition), method: :delete, data: { confirm: "Are you sure you want to delete this petition?" } %>
</tr>
